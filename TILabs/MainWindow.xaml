<Window x:Class="TILabs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TILabs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Margin="5" x:Name="lab1Open" Click="lab1Open_Click">лабораторная 1</Button>
            <Button Margin="5" x:Name="lab2Open" Click="lab2Open_Click">лабораторная 2</Button>
            <Button Margin="5" x:Name="lab3Open" Click="lab3Open_Click">лабораторная 3</Button>
        </StackPanel>
        <StackPanel>
            <StackPanel x:Name="StackPanelLab1">
                <StackPanel Orientation="Horizontal">
                    <Button Margin="5" x:Name="FileGen1Lab1" Click="FileGen1Lab1_Click">Записать файл 1</Button>
                    <Button Margin="5" x:Name="FileGen2Lab1" Click="FileGen2Lab1_Click">Записать файл 2</Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Margin="5" x:Name="Calc1Lab1" Click="Calc1Lab1_Click">Открыть файлы</Button>
                </StackPanel>
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0">номер файла</Label>
                    <Label Grid.Row="1" Grid.Column="0"> файл 1 </Label>
                    <Label Grid.Row="2" Grid.Column="0"> файл 2 </Label>
                    <Label Grid.Row="3" Grid.Column="0"> файл 3 </Label>

                    <Label Grid.Row="0" Grid.Column="1">H1</Label>
                    <Label Grid.Row="1" Grid.Column="1" x:Name="h1_1"></Label>
                    <Label Grid.Row="2" Grid.Column="1" x:Name="h1_2"></Label>
                    <Label Grid.Row="3" Grid.Column="1" x:Name="h1_3"></Label>
                    <Label Grid.Row="0" Grid.Column="2">H2</Label>
                    <Label Grid.Row="1" Grid.Column="2" x:Name="h2_1"></Label>
                    <Label Grid.Row="2" Grid.Column="2" x:Name="h2_2"></Label>
                    <Label Grid.Row="3" Grid.Column="2" x:Name="h2_3"></Label>
                    <Label Grid.Row="0" Grid.Column="3">H3</Label>
                    <Label Grid.Row="1" Grid.Column="3" x:Name="h3_1"></Label>
                    <Label Grid.Row="2" Grid.Column="3" x:Name="h3_2"></Label>
                    <Label Grid.Row="3" Grid.Column="3" x:Name="h3_3"></Label>

                    <Label Grid.Row="0" Grid.Column="4">Макс. энтроп.</Label>
                    <Label Grid.Row="1" Grid.Column="4" x:Name="h4_1"></Label>
                    <Label Grid.Row="2" Grid.Column="4" x:Name="h4_2"></Label>
                    <Label Grid.Row="3" Grid.Column="4" x:Name="h4_3"></Label>
                    <Label Grid.Row="0" Grid.Column="5">Теор. энтроп.</Label>
                    <Label Grid.Row="1" Grid.Column="5" x:Name="h5_1"></Label>
                    <Label Grid.Row="2" Grid.Column="5" x:Name="h5_2"></Label>
                    <Label Grid.Row="3" Grid.Column="5" x:Name="h5_3"></Label>


                </Grid>
            </StackPanel>
        </StackPanel>
        <StackPanel x:Name="StackPanelLab2">

        </StackPanel>
        <StackPanel x:Name="StackPanelLab3">

        </StackPanel>
    </StackPanel>
</Window>
